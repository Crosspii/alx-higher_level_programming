#include "main.h"
#include <stdio.h>

/**
 * print_last_digit(int) - prints the last digit of a number
 * @n: the number to find the last digit of
 * Return: the value of the last digit
 */
int print_last_digit(int)
{
	int l = n % 10;

	if (l < 0)
	{
		l = -l;
	}

	_putchar(l + '0');
	return (l);
}
